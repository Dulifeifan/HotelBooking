@model HotelBooking.Web.Models.FilterRoomModel

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Make A New Booking</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.roomType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.roomType,
               new List<SelectListItem> {
                   new SelectListItem {
                       Text="All",
                       Value="",
                       Selected=true
                   },
                   new SelectListItem {
                       Text="Single",
                       Value="Single",
                       Selected=false
                   },
                   new SelectListItem {
                       Text="Double",
                       Value="Double",
                       Selected=false
                   },
               }
               , new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.roomType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.bedType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.bedType,
               new List<SelectListItem> {
                   new SelectListItem {
                       Text="All",
                       Value="",
                       Selected=true
                   },
                   new SelectListItem {
                       Text="King",
                       Value="King",
                       Selected=false
                   },
                   new SelectListItem {
                       Text="Queen",
                       Value="Queen",
                       Selected=false
                   },
                   new SelectListItem {
                       Text="Suite",
                       Value="Suite",
                       Selected=false
                   },
                   new SelectListItem {
                       Text="Twin",
                       Value="Twin",
                       Selected=false
                   },
               }, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bedType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.acType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.acType,
               new List<SelectListItem> {
                   new SelectListItem {
                       Text="All",
                       Value="",
                       Selected=true
                   },
                   new SelectListItem {
                       Text="AC Room",
                       Value="ACRoom",
                       Selected=false
                   },
                   new SelectListItem {
                       Text="Non-AC Room",
                       Value="NonACRoom",
                       Selected=false
                   },

               }, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.acType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}


